rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Allow authenticated users to create their own document
      // The userId in the path must match the authenticated user's UID
      allow create: if request.auth != null && request.auth.uid == userId;

      // Allow users to read, update, and delete their own document
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;

      // Allow other authenticated users to read public profile info
      // (needed for support circle features)
      allow read: if request.auth != null;

      // Journal subcollection
      match /journal/{entryId} {
        // Only the owner can read and write journal entries
        allow read, write: if isOwner(userId);
      }

      // Nudges subcollection
      match /nudges/{nudgeId} {
        // Owner can read their nudges
        allow read: if isOwner(userId);

        // Any authenticated user can send nudges to this user
        // (for support circle feature)
        allow create: if isAuthenticated();

        // Owner can delete their nudges
        allow delete: if isOwner(userId);
      }
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
